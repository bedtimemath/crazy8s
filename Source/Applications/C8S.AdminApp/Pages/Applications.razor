@page "/applications"
@inherits C8S.Common.Razor.Base.BaseRazorPage


<PageTitle>Applications</PageTitle>

<RadzenStack Orientation="Orientation.Vertical"
             AlignItems="AlignItems.Stretch"
             JustifyContent="JustifyContent.SpaceBetween"
             Gap="0.5rem"
             class="h-100 w-100">

    <ApplicationsFilter Filter="@_filter"
                        FilterChanged="@(async (f) => await HandleFilterChanged(f))"
                        CssClass="w-100"/>
    
    <ApplicationsFilterDescription Filter="@_filter"
                                   Total="@_total"
                                   CssClass="w-100" />

    <ApplicationsLister @ref="@_applicationsLister"
                        TotalChanged="@HandleTotalChanged"
                        CssClass="w-100" />

</RadzenStack>

