@using C8S.Common
@using C8S.Common.Models
@using C8S.Database.Abstractions.Enumerations
@inherits BaseRazorComponent

<div id="@ComponentId" class="c8s-applications-filter @CssClass">
    
    <RadzenStack Orientation="Orientation.Horizontal"
                 AlignItems="AlignItems.Center"
                 JustifyContent="JustifyContent.SpaceBetween"
                 Gap="1rem;"
                 class="w-100 h-100">
        
        <RadzenTextBox @bind-Value="@Filter.Query"
                       type="search"
                       Change="@(async () => await FilterChanged.InvokeAsync(Filter))"
                       Placeholder="Search for name, email, etc."
                       
                       class="flex-grow-1"/>
        
        <RadzenDropDown @bind-Value="@Filter.Status"
                        Change="@(async () => await FilterChanged.InvokeAsync(Filter))"
                        TValue="ApplicationStatus?"
                        Data="@(EnumLabel<ApplicationStatus>.GetAllEnumLabels())"
                        TextProperty="@nameof(EnumLabel<ApplicationStatus>.Display)"
                        ValueProperty="@nameof(EnumLabel<ApplicationStatus>.Value)"
                        AllowClear="true"
                        class="flex-shrink-0"/>

    </RadzenStack>

</div>