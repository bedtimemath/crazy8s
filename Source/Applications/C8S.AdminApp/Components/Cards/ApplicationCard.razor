@using C8S.Common
@using C8S.Common.Extensions
@inherits BaseRazorComponent

<div id="@ComponentId" class="c8s-application-card @CssClass">

    <RadzenCard class="w-100">

        <RadzenStack Orientation="Orientation.Horizontal"
                     AlignItems="AlignItems.Start"
                     JustifyContent="JustifyContent.SpaceBetween"
                     class="w-100">

            @* APPLICATION INFO *@
            <RadzenStack Orientation="Orientation.Vertical"
                         AlignItems="AlignItems.Stretch"
                         JustifyContent="JustifyContent.SpaceBetween"
                         class="flex-grow-1">

                @* FULL NAME *@
                <RadzenText TagName="TagName.H5"
                            TextAlign="TextAlign.Left"
                            TextStyle="TextStyle.DisplayH5"
                            Text="@Application.FullName"
                            class="flex-grow-1"/>

                @* COLUMNS *@
                <RadzenStack Orientation="Orientation.Horizontal"
                             AlignItems="AlignItems.Start"
                             JustifyContent="JustifyContent.Start"
                             Gap="2rem">

                    @* EMAIL | ORGANIZATION *@
                    <RadzenStack Orientation="Orientation.Vertical"
                                 AlignItems="AlignItems.Start"
                                 JustifyContent="JustifyContent.Start"
                                 Gap="0"
                                 class="c8s-application-card-column">

                        <RadzenText TagName="TagName.Div"
                                    TextAlign="TextAlign.Left"
                                    TextStyle="TextStyle.Body1"
                                    Text="@Application.ApplicantEmail"/>
                    </RadzenStack>

                    @* STATUS | SUBMITTED | START DATES *@
                    <RadzenStack Orientation="Orientation.Vertical"
                                 AlignItems="AlignItems.Start"
                                 JustifyContent="JustifyContent.Start"
                                 Gap="0"
                                 class="c8s-application-card-column">

                        <RadzenText TagName="TagName.Div"
                                    TextAlign="TextAlign.Left"
                                    TextStyle="TextStyle.Body1">
                            Status: @(Application.Status?.GetLabel() ?? SharedConstants.Display.NotSet)
                        </RadzenText>

                        <RadzenText TagName="TagName.Div"
                                    TextAlign="TextAlign.Left"
                                    TextStyle="TextStyle.Body1">
                            Submitted: @(Application.SubmittedOn?.ToString("G") ?? SharedConstants.Display.NotSet)
                        </RadzenText>
                        <RadzenText TagName="TagName.Div"
                                    TextAlign="TextAlign.Left"
                                    TextStyle="TextStyle.Body1">
                            Start Dates: @(Application.StartDates ?? SharedConstants.Display.NotSet)
                        </RadzenText>
                    </RadzenStack>

                </RadzenStack>

            </RadzenStack>

            @* VIEW BUTTON *@
            <RadzenButton ButtonType="ButtonType.Button"
                          ButtonStyle="ButtonStyle.Light"
                          Variant="Variant.Flat"
                          Text="View"
                          class="flex-shrink-0"/>

        </RadzenStack>

    </RadzenCard>

</div>