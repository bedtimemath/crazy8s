@inherits BaseRazorComponent

<div id="@ComponentId" class="c8s-card c8s-coach-card @CssClass">

    <RadzenCard class="w-100">

        <RadzenStack Orientation="Orientation.Horizontal"
                     AlignItems="AlignItems.Start"
                     JustifyContent="JustifyContent.SpaceBetween"
                     class="w-100">

            @* COACH INFO *@
            <RadzenStack Orientation="Orientation.Vertical"
                         AlignItems="AlignItems.Stretch"
                         JustifyContent="JustifyContent.SpaceBetween"
                         class="flex-grow-1">

                @* FULL NAME *@
                <RadzenText TagName="TagName.H5"
                            TextAlign="TextAlign.Left"
                            TextStyle="TextStyle.DisplayH5"
                            Text="@Coach.FullName"
                            class="flex-grow-1"/>

                @* COLUMNS *@
                <RadzenStack Orientation="Orientation.Horizontal"
                             AlignItems="AlignItems.Start"
                             JustifyContent="JustifyContent.Start"
                             Gap="2rem">

                    @* EMAIL | PHONE *@
                    <RadzenStack Orientation="Orientation.Vertical"
                                 AlignItems="AlignItems.Start"
                                 JustifyContent="JustifyContent.Start"
                                 Gap="0"
                                 class="c8s-card-column c8s-coach-card-column">

                        <RadzenText TagName="TagName.Div"
                                    TextAlign="TextAlign.Left"
                                    TextStyle="TextStyle.Body1"
                                    Text="@Coach.Email"/>

                        <RadzenText TagName="TagName.Div"
                                    TextAlign="TextAlign.Left"
                                    TextStyle="TextStyle.Body1">
                            Phone: @(Coach.FullPhone)
                        </RadzenText>
                    </RadzenStack>

                </RadzenStack>

            </RadzenStack>

            @* VIEW BUTTON *@
            <RadzenButton ButtonType="ButtonType.Button"
                          ButtonStyle="ButtonStyle.Light"
                          Variant="Variant.Flat"
                          Text="View"
                          class="flex-shrink-0"/>

        </RadzenStack>

    </RadzenCard>

</div>