@inherits LayoutComponentBase

<PageTitle>Crazy 8s - Admin</PageTitle>

<RadzenLayout>
    <RadzenHeader class="rz-p-1">
        <RadzenStack Orientation="Orientation.Horizontal"
                     AlignItems="AlignItems.Center"
                     JustifyContent="JustifyContent.SpaceBetween"
                     class="w-100 h-100">
            <LogoDisplay CssClass="flex-shrink-0 rz-pl-2"/>
            <ProfileDisplay CssClass="flex-shrink-0 rz-pr-2"/>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar>
        <SidebarMenu />
    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
    <RadzenFooter>
        <FooterDisplay />
    </RadzenFooter>
</RadzenLayout>