@page "/wordpress"
@inherits BaseRazorPage
@using C8S.AdminApp.Client.UI.WordPress


<RadzenSplitter Orientation="Orientation.Horizontal">
    <RadzenSplitterPane Size="50%">

        <RadzenStack Orientation="Orientation.Vertical"
                     AlignItems="AlignItems.Stretch"
                     JustifyContent="JustifyContent.Normal"
                     Gap="1rem">

            <WordPressUserCreator />

            <WordPressCoachLister CoachSelected="@HandleCoachSelected" />

        </RadzenStack>

    </RadzenSplitterPane>
    <RadzenSplitterPane Size="50%">
        @if (SelectedCoach == null)
        {
            <RadzenStack Orientation="Orientation.Vertical"
                         AlignItems="AlignItems.Center"
                         JustifyContent="JustifyContent.Center"
                         class="w-100 h-100">
                <RadzenText TagName="TagName.Div"
                            TextStyle="TextStyle.Body1"
                            TextAlign="TextAlign.Center"
                            Text="Choose a coach" />
            </RadzenStack>
        }
        else
        {
            <WordPressCoachEditor Coach="@SelectedCoach" />
        }
    </RadzenSplitterPane>
</RadzenSplitter>
