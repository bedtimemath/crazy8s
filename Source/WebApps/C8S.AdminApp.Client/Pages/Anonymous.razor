@page "/"
@using SC.Common
@inherits BaseRazorPage
@layout AnonymousLayout
@rendermode InteractiveWebAssembly

<WaitingPageContainer HideDuringPreRender="true">
    <RadzenStack Orientation="Orientation.Vertical"
                 AlignItems="AlignItems.Center"
                 JustifyContent="JustifyContent.Normal"
                 class="w-100">
                 
        <RadzenText TagName="TagName.H2"
                    TextStyle="TextStyle.DisplayH2">
            Please Log In
        </RadzenText>
        
        <RadzenButton ButtonType="ButtonType.Button"
                      ButtonStyle="ButtonStyle.Primary"
                      Icon="@SoftCrowConstants.Icons.LogIn"
                      Click="@HandleLogInClicked">
            Log In
        </RadzenButton>

    </RadzenStack>
</WaitingPageContainer>