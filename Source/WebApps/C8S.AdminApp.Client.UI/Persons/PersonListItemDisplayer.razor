@using SC.Common.Razor.Navigation.Commands
@using SC.Common.Razor.Navigation.Enums
@inherits SC.Common.Razor.Base.BaseRazorComponent

<div class="c8s-listitem-displayer c8s-person-displayer @CssClass">
    @* OUTER *@
    <RadzenStack Orientation="Orientation.Horizontal"
                 AlignItems="AlignItems.Center"
                 JustifyContent="JustifyContent.SpaceBetween"
                 class="w-100">

        @* DETAILS *@
        <RadzenStack Orientation="Orientation.Vertical"
                     AlignItems="AlignItems.Stretch"
                     JustifyContent="JustifyContent.Normal"
                     class="flex-grow-1">

            <RadzenText TagName="TagName.H4"
                        TextStyle="TextStyle.DisplayH4"
                        Text="@Person.FullName" />

            <RadzenStack Orientation="Orientation.Horizontal"
                         AlignItems="AlignItems.Start"
                         JustifyContent="JustifyContent.Normal"
                         Gap="1rem"
                         class="w-100">

                @* COLUMN #1 *@
                <RadzenStack Orientation="Orientation.Vertical"
                             AlignItems="AlignItems.Stretch"
                             JustifyContent="JustifyContent.Start"
                             Gap="0"
                             class="c8s-listitem-displayer-column c8s-person-displayer-column">

                    @* EMAIL *@
                    <RadzenText TagName="TagName.Div"
                                TextStyle="TextStyle.Body1"
                                TextAlign="TextAlign.Start"
                                Text="@Person.Email" />

                </RadzenStack>
                @* COLUMN #1 *@

                @* COLUMN #2 *@
                <RadzenStack Orientation="Orientation.Vertical"
                             AlignItems="AlignItems.Stretch"
                             JustifyContent="JustifyContent.Start"
                             Gap="0"
                             class="c8s-listitem-displayer-column c8s-person-displayer-column">


                </RadzenStack>
                @* COLUMN #2 *@

                @* COLUMN #3 *@
                <RadzenStack Orientation="Orientation.Vertical"
                             AlignItems="AlignItems.Stretch"
                             JustifyContent="JustifyContent.Start"
                             Gap="0"
                             class="c8s-listitem-displayer-column c8s-person-displayer-column">

                </RadzenStack>
                @* COLUMN #3 *@

            </RadzenStack>
        </RadzenStack>

        @* VIEW BUTTON *@
        <RadzenStack Orientation="Orientation.Vertical"
                     AlignItems="AlignItems.Center"
                     JustifyContent="JustifyContent.Start"
                     class="flex-shrink-0">

            <RadzenButton ButtonType="ButtonType.Button"
                          ButtonStyle="ButtonStyle.Primary"
                          Text="View >"
                          Click="@(() => CQRSService.ExecuteCommand(new NavigationCommand()
                                 {
                                     Action = NavigationAction.Open,
                                     PageUrl = $"persons/{Person.PersonId}"
                                 }))" />

        </RadzenStack>
    </RadzenStack>
</div>