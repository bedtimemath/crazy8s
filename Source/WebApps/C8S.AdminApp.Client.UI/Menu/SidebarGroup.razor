@inherits SC.Common.Razor.Base.BaseRazorComponent

<div id="@ComponentId" class="c8s-sidebar-group @(_isSelected ? "selected" : null) @CssClass">
    <RadzenStack Orientation="Orientation.Horizontal"
                 AlignItems="AlignItems.Center"
                 JustifyContent="JustifyContent.Left"
                 onclick="@(async () => await Clicked.InvokeAsync(Group))"
                 class="w-100">

        <IconDisplay Icon="@Group.Icon"
                     CssClass="c8s-sidebar-group-icon" />

        <RadzenText TagName="TagName.Div"
                    TextStyle="TextStyle.Body1"
                    TextAlign="TextAlign.Left"
                    Text="@Group.Display"
                    class="c8s-sidebar-group-display" />

    </RadzenStack>
</div>